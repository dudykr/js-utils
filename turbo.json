{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "topo": {
      "dependsOn": ["^topo"],
      "inputs": ["package.json"]
    },
    "build:tsc": {
      "dependsOn": ["topo"],
      "inputs": ["lib/**/*.ts", "lib/**/*.tsx"],
      "outputs": ["lib/**/*.js", "lib/**/*.d.ts", "lib/**/*.map"]
    },
    "build": {
      "dependsOn": ["build:tsc", "^build:tsc"]
    },

    "lint": {},
    "test": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    },
    "test:ci": {
      "dependsOn": ["build"]
    }
  }
}
